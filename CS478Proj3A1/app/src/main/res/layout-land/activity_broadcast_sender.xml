<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.com.cs478proj3a1.BroadcastSender"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp"
    android:orientation="horizontal">

    <ImageButton
        android:id="@+id/basketballButton"
        android:layout_width="86dp"
        android:layout_height="86dp"
        android:layout_marginRight="16dp"
        android:onClick="sendBasketballBroadcast"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/basketballTextView"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/basketballTextView"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/basketball1"
        tools:ignore="ContentDescription,RtlHardcoded"
        app:layout_constraintLeft_toRightOf="@+id/basketballTextView"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="1.0"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="0dp" />

    <ImageButton
        android:id="@+id/baseballButton"
        android:layout_width="86dp"
        android:layout_height="86dp"
        android:layout_marginBottom="0dp"
        android:layout_marginRight="16dp"
        android:onClick="sendBaseballBroadcast"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/baseballTextView"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/baseball1"
        tools:ignore="ContentDescription,RtlHardcoded"
        app:layout_constraintLeft_toRightOf="@+id/baseballTextView"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintTop_toTopOf="@+id/baseballTextView"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/baseballTextView"
        android:layout_width="488dp"
        android:layout_height="86dp"
        android:layout_marginLeft="0dp"
        android:clickable="true"
        android:inputType="none"
        android:text="@string/baseballInfoLabel"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.502"
        tools:ignore="RtlHardcoded" />

    <TextView
        android:id="@+id/basketballTextView"
        android:layout_width="491dp"
        android:layout_height="86dp"
        android:layout_marginLeft="0dp"
        android:inputType="none"
        android:text="@string/basketballInfoLabel"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.04"
        tools:ignore="RtlHardcoded" />


</android.support.constraint.ConstraintLayout>


